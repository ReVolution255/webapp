<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD
  Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>


<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

    <servlet>
        <servlet-name>Application</servlet-name>
        <servlet-class>main.java.UsersPage</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Application</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Application</servlet-name>
        <url-pattern>/index*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>main.java.EditUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/edit-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>main.java.DeleteUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/delete-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>main.java.AddUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AboutUser</servlet-name>
        <servlet-class>main.java.AboutUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AboutUser</servlet-name>
        <url-pattern>/about-user</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>PostgreSQL</description>
        <res-ref-name>jdbc/postgre</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>